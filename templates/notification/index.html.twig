{% extends 'base.html.twig' %}

{% block title %}Hello AccountController!
{% endblock %}

{% block stylesheets %}
	{{parent()}}
	
{% endblock %}

{% block body %}
	<div class="had-container">


		<div class="row">
			<div class="col m8 s8 offset-m2 offset-s2 center">

				<ul class="collection col s12 ">
					<li class="collection-header center">
						<h4>Your Notification
						</h4>

					</li>
					{% if notifications|length > 0 %}

						<li class="collection-header center">
							<a href="{{path('mark_all_seen')}}">
								mark all ass read

							</a>

						</li>
            

						{% for notification in notifications %}
                       
                 
							{% if notification is news %}
								<li class="collection-item">
									<a href="{{path('filter_by_user',{'id':notification.createdBy.id})}}">
										{{notification.createdBy.username}}</a>

									<a href="{{path('mark_seen',{'id':notification.id})}}">
										<span class="new badge" data-badge-caption="read"></span>
									</a>

									<a href="{{path('news_show',{id:notification.news.id})}}">
										was created<span class="new badge" data-badge-caption=" {{notification.news.title}}"></span>
									</a>
	 
								</li>
						
        
							{% endif %}
						{% endfor %}

					{% else %}
						<li class="collection-header center">
							<h6>Your do not have notification
							</h6>

						</li>
					{% endif %}
				</ul>


			</div>
		</div>
	</div>
</div></div><!-- fin del .container -->{% endblock %}{% block javascripts %}{{parent()}}{% endblock %}