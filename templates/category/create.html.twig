{% extends 'admin/base.html.twig' %}

{% block title %}Hello PostController!
{% endblock %}

{% block body %}
<style>
   
</style>
	<div class="row">
		<div class="col s8 offset-s2">
			<div class="card">
				<div class="card-content">
					{{form_start(form)}}
					{{form_widget(form)}}
					<div class="collection hide"></div>
					 <button class="btn waves-effect waves-light mt_1" type="submit" name="action">Submit
                             <i class="material-icons right">send</i>
                       </button>
					{{form_end(form)}}
				</div>
			</div>
			<ul class="collection ">
					{% for category in categories %}
					<li class="collection-item">
					<div>{{category.name}}
						<a href="{{path('category_edit',{id:category.id})}}" class="secondary-content"><i class="material-icons">edit</i></a> 
						<a href="#{{category.id}}" class="secondary-content  modal-trigger"><i class="material-icons">delete</i></a>
					</div>
					</li>
					
						{# <a href="#{{category.id}}" class="collection-item  modal-trigger">{{category.name}}<i class="material-icons hide right">close</i></a> #}
					
					<div id="{{category.id}}" class="modal">
						<div class="modal-content">
							<h4>Remove Category</h4>
							<p>Are you sure to remove ( {{category.name}} ) </p>
						</div>
						<div class="modal-footer">
							<a id="accept-delete" href="{{path('category_delete',{id:category.id})}}" class="modal-close waves-effect waves-green btn-flat">Agree</a>
							<a id="ignore-accept" class="modal-close waves-effect waves-green btn-flat">cancle</a>
						</div>
					</div>
					
					{% endfor %}
			
			
      </ul>
		</div>
	</div>
	
{# <a id="modal-delete" class="waves-effect waves-light btn modal-trigger hide" href="#modal1">Modal</a> #}

<!-- Modal Structure -->


{% endblock %}


