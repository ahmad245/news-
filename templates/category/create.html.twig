  let hrefs=document.querySelectorAll('a');
  hrefs.forEach((el)=>{
  el.addEventListener('mouseover',(e)=>{
	  if(e.target.querySelector('i') ){
          e.target.querySelector('i').classList.remove('hide')
	  } 
	  })
  })
   hrefs.forEach((el)=>{
    el.addEventListener('mouseout',(e)=>{
		if(e.target.querySelector('i') ){
       e.target.querySelector('i').classList.add('hide')}
  })
  })
   #}
</script>
{% endblock %}